    <select id="getButtonStatus" resultType="java.lang.String" statementType="STATEMENT">
    	select ${name} from ASD_Robot
    </select>
    
    <update id="updateButtonStatus" statementType="STATEMENT" >
    	update ASD_Robot set ${name} = ${status}
